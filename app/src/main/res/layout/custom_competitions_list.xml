<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journalList_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    card_view:cardCornerRadius="20dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customCompetitionsList_TextViewTitle"
            fontPath="fonts/IRANSansMobile(FaNum)_Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customCompetitionsList_TextViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1398/05/29 21:00"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="ltr"
            android:padding="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/customCompetitionsList_ImageViewPicture"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layoutDirection="ltr"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/customCompetitionsList_TextViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layoutDirection="ltr"
            android:padding="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customCompetitionsList_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>