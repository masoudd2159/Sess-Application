<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FoodReservationFragment">

    <LinearLayout
        android:id="@+id/statusBar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_increaseCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wallet_background"
            android:drawableEnd="@drawable/wallet"
            android:drawableRight="@drawable/wallet"
            android:drawablePadding="10dp"
            android:gravity="center|right"
            android:padding="10dp"
            android:text="@string/increase_credit"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_Credit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/credit_background"
            android:gravity="center|right"
            android:padding="12dp"
            android:textColor="@color/sky"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/statusBar_bottom"
        android:layout_below="@id/statusBar_top"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/dinner"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/lunch"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/breakfast"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/condition"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saturday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/saturday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/saturday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/saturday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sunday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sunday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sunday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/sunday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/monday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/monday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/monday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/monday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tuesday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/tuesday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/tuesday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/tuesday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wednesday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/wednesday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/wednesday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/wednesday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/thursday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/thursday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/thursday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/thursday"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/friday_Dinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/friday_Lunch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/friday_Breakfast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reservation_background_black"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/state_background"
                android:gravity="center"
                android:text="@string/friday"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/sky"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next_Week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/back"
            android:drawableLeft="@drawable/back"
            android:gravity="center|left"
            android:paddingRight="3dp"
            android:text="@string/next_week"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_State"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/previous_Week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/next"
            android:drawableRight="@drawable/next"
            android:gravity="center|right"
            android:paddingLeft="3dp"
            android:text="@string/back_week"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>