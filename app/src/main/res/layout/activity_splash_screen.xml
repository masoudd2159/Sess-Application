<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:layoutDirection="ltr"
    tools:context=".activities.SplashScreenActivity"
    tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ibg_splash_screen"
        android:layoutDirection="ltr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layoutDirection="ltr"
            android:src="@drawable/ic_sku_white" />

        <TextView
            fontPath="fonts/Lalezar.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:text="@string/shahrekord_university"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/splashScreen_FullName"
            fontPath="fonts/IRANSansMobile_Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splashScreen_AnimationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:layoutDirection="ltr"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_6.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/buttonTryAgain_SplashScreen"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:background="@color/red_2"
        android:layoutDirection="ltr"
        android:text="@string/try_again"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

</FrameLayout>