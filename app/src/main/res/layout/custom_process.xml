<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customProcess_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="#cccccc"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/customProcess_TextViewRequest"
            fontPath="fonts/IRANSansMobile(FaNum)_Black.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textColor="#1A1A1A"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end|center"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customProcess_TextViewStatus"
                fontPath="fonts/IRANSansMobile(FaNum)_Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|right"
                android:layoutDirection="ltr"
                android:singleLine="true"
                android:textColor="#FD383838"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layoutDirection="ltr"
                app:srcCompat="@drawable/ic_status" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#bebcbcbc"
            android:layoutDirection="ltr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end|center"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customProcess_TextViewStep"
                fontPath="fonts/IRANSansMobile(FaNum)_Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|right"
                android:layoutDirection="ltr"
                android:singleLine="true"
                android:textColor="#FD383838"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:layoutDirection="ltr"
                app:srcCompat="@drawable/ic_step" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#bebcbcbc"
            android:layoutDirection="ltr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end|center"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customProcess_TextViewEmployee"
                fontPath="fonts/IRANSansMobile(FaNum)_Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|right"
                android:layoutDirection="ltr"
                android:singleLine="true"
                android:textColor="#FD383838"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:layoutDirection="ltr"
                app:srcCompat="@drawable/ic_employee" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>