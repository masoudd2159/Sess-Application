<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journalTotalList_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    card_view:cardCornerRadius="8dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:layoutDirection="ltr">

            <ImageView
                android:id="@+id/journalTotalList_JournalImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layoutDirection="ltr"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <TextView
                android:id="@+id/journalTotalList_Title"
                fontPath="fonts/IRANSans(FaNum)_Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layoutDirection="ltr"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <NumberPicker
                    android:id="@+id/journalTotalList_PickerYears"
                    android:layout_width="70dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:descendantFocusability="blocksDescendants"
                    android:layoutDirection="ltr" />

                <TextView
                    fontPath="fonts/IRANSans(FaNum)_Medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="5dp"
                    android:layoutDirection="ltr"
                    android:text="آرشیو سال : "
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
