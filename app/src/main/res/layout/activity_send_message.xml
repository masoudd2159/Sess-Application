<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SendMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/sendMessageActivity_TextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="شناسه : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/sendMessageActivity_EditTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/sendMessageActivity_TextViewID"
                android:background="@android:color/transparent"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#d1d1d1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/sendMessageActivity_TextViewStudentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="شماره دانشجویی : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/sendMessageActivity_EditTextStudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/sendMessageActivity_TextViewStudentID"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#d1d1d1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sendMessageActivity_TextViewMessageType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نوع پیام : "
                    android:textSize="16sp" />

                <NumberPicker
                    android:id="@+id/sendMessageActivity_PickerMessageType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/sendMessageActivity_TextViewMessageType"
                    android:descendantFocusability="blocksDescendants"
                    android:layoutDirection="ltr" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sendMessageActivity_TextViewSendType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نحوه ارسال : "
                    android:textSize="16sp" />

                <NumberPicker
                    android:id="@+id/sendMessageActivity_PickerSendType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/sendMessageActivity_TextViewSendType"
                    android:descendantFocusability="blocksDescendants"
                    android:layoutDirection="ltr" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#d1d1d1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/sendMessageActivity_TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="عنوان : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/sendMessageActivity_EditTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/sendMessageActivity_TextViewTitle"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#d1d1d1" />

        <EditText
            android:id="@+id/sendMessageActivity_EditText_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:textSize="16sp" />

    </LinearLayout>

</FrameLayout>