<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layoutDirection="ltr"
    tools:ignore="MissingPrefix">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_solid_tl8tr8bl8br"
        android:layoutDirection="ltr"
        android:padding="@dimen/_3sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ibg_food" />

    <TextView
        android:id="@+id/description"
        fontPath="fonts/IRANSansMobile_Black.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/close"
        android:layout_margin="@dimen/_3sdp"
        android:background="#80000000"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />

    <Button
        android:id="@+id/close"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/image"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bg_bluegrey3_solid"
        android:layoutDirection="ltr"
        android:onClick="onClickItemClose"
        android:text="@string/close"
        android:textColor="@android:color/white"
        android:visibility="visible" />

</RelativeLayout>