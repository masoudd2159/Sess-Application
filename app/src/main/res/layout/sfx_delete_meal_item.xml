<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sfxDeleteMeal_LayoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:gravity="center_horizontal"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/sfxDeleteMeal_State"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:layoutDirection="ltr"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sfxDeleteMeal_LayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sfxDeleteMeal_LayoutOne"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/sfxDeleteMeal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_food"
            android:drawableRight="@drawable/ic_food"
            android:drawablePadding="10dp"
            android:gravity="center|right"
            android:layoutDirection="ltr"
            android:maxLines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sfxDeleteMeal_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_chef"
            android:drawableRight="@drawable/ic_chef"
            android:drawablePadding="10dp"
            android:gravity="center|right"
            android:layoutDirection="ltr"
            android:maxLines="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sfxDeleteMeal_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_coins"
            android:drawableRight="@drawable/ic_coins"
            android:drawablePadding="10dp"
            android:gravity="center|right"
            android:layoutDirection="ltr"
            android:maxLines="1"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sfxDeleteMeal_LayoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sfxDeleteMeal_LayoutTwo"
        android:layout_marginTop="5dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sfxDeleteMeal_Delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_2"
            android:layoutDirection="ltr"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sfxDeleteMeal_Close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_grey"
            android:layoutDirection="ltr"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>