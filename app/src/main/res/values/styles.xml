<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransNav" parent="AppTheme" />

    <style name="Reservation_black">
        <item name="android:background">@drawable/reservation_background_black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Reservation_green">
        <item name="android:background">@drawable/reservation_background_lite_green</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>
